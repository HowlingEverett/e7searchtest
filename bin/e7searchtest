#!/usr/bin/env ruby

require "bundler/setup"
require "e7searchtest"

def usage
  puts <<~USAGE
    <QUERY_FORMAT> | bin/e7searchtest

    EXAMPLE

    echo "P Ford Car Review Q Review" | bin/e7searchtest
  USAGE

  exit
end

usage if STDIN.tty?
search_input = Kernel.gets

puts E7SearchTest.rank(search_input)
